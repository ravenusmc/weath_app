@import "bootstrap-sprockets";
@import "bootstrap";

.main {
  margin-top: 200px;
  width: 500px;
}

/* Home Page */

.navbar-default {
  margin: -10px ;
}

.jumbotron {
  text-align: center;
  height: 800px;
  background-image: image-url("women.jpg");
  background-size: 100% 100%;
  padding-top: -15px;
}

/* Index Page CSS */

.top_container {
  padding-top: 100px;
  
}

.main_container {
  background: rgba(255,255,255,0.8);
  text-align: center;
  padding: 30px 15px 30px 15px;
  border-style: solid;
  border-color: #01DF01;
}

.top_font {
  font-size: 40px;
  text-transform: uppercase;
}

.font_size {
  font-size: 32px;
}

/* Changing background pictures */

.nothing {
  background: url(<%= asset_path 'background.jpg' %>) no-repeat center center fixed;
  background-size: cover;
}

.sunny {
  background: url(<%= asset_path 'sunny.jpg' %>) no-repeat center center fixed;
  background-size: cover;
}

.thunder {
  background: url(<%= asset_path 'thunder' %>) no-repeat center center fixed;
  background-size: cover;
}

.fog {
  background: url(<%= asset_path 'fog.jpg' %>) no-repeat center center fixed;
  background-size: cover;
}

.rain {
  background: url(<%= asset_path 'rain.jpg' %>) no-repeat center center fixed;
  background-size: cover; 
}

.partly-cloudy {
  background: url(<%= asset_path 'cloudy.jpg' %>) no-repeat center center fixed;
  background-size: cover;
}

.snow {
  background: url(<%= asset_path 'snow.jpg' %>) no-repeat center center fixed;
  background-size: cover;
}

/* Below is CSS for the navbar */

.navbar-default {
  background-color: #2d2bc0;
  border-color: #2d2bc0;
}
.navbar-default .navbar-brand {
  color: #ecf0f1;
}
.navbar-default .navbar-brand:hover, .navbar-default .navbar-brand:focus {
  color: #ffbbbc;
}
.navbar-default .navbar-text {
  color: #ecf0f1;
}
.navbar-default .navbar-nav > li > a {
  color: #ecf0f1;
}
.navbar-default .navbar-nav > li > a:hover, .navbar-default .navbar-nav > li > a:focus {
  color: #ffbbbc;
}
.navbar-default .navbar-nav > .active > a, .navbar-default .navbar-nav > .active > a:hover, .navbar-default .navbar-nav > .active > a:focus {
  color: #ffbbbc;
  background-color: #2d2bc0;
}
.navbar-default .navbar-nav > .open > a, .navbar-default .navbar-nav > .open > a:hover, .navbar-default .navbar-nav > .open > a:focus {
  color: #ffbbbc;
  background-color: #2d2bc0;
}
.navbar-default .navbar-toggle {
  border-color: #2d2bc0;
}
.navbar-default .navbar-toggle:hover, .navbar-default .navbar-toggle:focus {
  background-color: #2d2bc0;
}
.navbar-default .navbar-toggle .icon-bar {
  background-color: #ecf0f1;
}
.navbar-default .navbar-collapse,
.navbar-default .navbar-form {
  border-color: #ecf0f1;
}
.navbar-default .navbar-link {
  color: #ecf0f1;
}
.navbar-default .navbar-link:hover {
  color: #ffbbbc;
}

@media (max-width: 767px) {
  .navbar-default .navbar-nav .open .dropdown-menu > li > a {
    color: #ecf0f1;
  }
  .navbar-default .navbar-nav .open .dropdown-menu > li > a:hover, .navbar-default .navbar-nav .open .dropdown-menu > li > a:focus {
    color: #ffbbbc;
  }
  .navbar-default .navbar-nav .open .dropdown-menu > .active > a, .navbar-default .navbar-nav .open .dropdown-menu > .active > a:hover, .navbar-default .navbar-nav .open .dropdown-menu > .active > a:focus {
    color: #ffbbbc;
    background-color: #2d2bc0;
  }
}
