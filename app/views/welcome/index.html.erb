<div class="row top_container">
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h1>Look up your Local Weather Forecast</h1>
      <p>Please Select your city and state!!</p>
      <div>
        <!-- Start creation of form -->
        <%= form_tag(index_path) do %></p>
          <!-- back to the present page after submitting form -->
          <p><%= text_field_tag :city, nil, placeholder: "City Name" %></p><br />
          <p><%= select_tag :state, options_for_select(@states), :prompt => "Please Select" %><p><br />
          <%= submit_tag "Check Weather" %></p><br />
        <% end %>
          <!-- We'll display the results here: --> 
          <h1>Forecast for <%= @location %>:</h1>
          <p><em>What's the weather like?</em></p>
          <p>
            Temperature is: <%= @temp_f %>° F / <%= @temp_c %>° C
          </p>
          <p>
            Feels like: <%= @real_feel %>° F
          </p>
          <p>
            <%= @weather_words %><%= image_tag @weather_icon %>
          </p>
      </div>
    </div>
  </div>





       




